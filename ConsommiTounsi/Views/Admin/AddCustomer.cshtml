@model ConsommiTounsi.Models.Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Add Customer</h3>
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Customer Infos <small> Insert customer infos</small></h2>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />

                    @using (Html.BeginForm("AddCustomer", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-label-left", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                                First Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @placeholder = "First Name" })
                                @Html.ValidationMessageFor(m => m.firstName, "", new { @class = "text-danger" })
                            </div>


                        </div>
                        <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                    Last Name <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                     @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @placeholder = "Last name" })
                     @Html.ValidationMessageFor(m => m.lastName, "", new { @class = "text-danger" })
                    
                </div>
            </div>
            <div class="item form-group">
                <label for="login" class="col-form-label col-md-3 col-sm-3 label-align">Login</label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @placeholder = "Login" })
                    @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })
                    
                </div>
            </div>
            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                    Password <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.password, new {@type= "password", @class = "form-control", @value = "passwordonetwo" })
                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                    
                </div>
            </div>
            
            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" for="phone">
                    Phone <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.phone, new {  @class = "form-control", @placeholder="Phone"})
                    @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                    <input type="tel" class="form-control">
                </div>
            </div>
            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" for="email">
                    E-mail <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.mail, new {@type="email", @class = "form-control", @placeholder = "E-mail" })
                    @Html.ValidationMessageFor(m => m.mail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" for="adress">
                    Adress <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.address, new { @class = "form-control", @placeholder = "Adress" })
                    @Html.ValidationMessageFor(m => m.address, "", new { @class = "text-danger" })
                   
                </div>
            </div>


            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align">Gender</label>
                <div class="col-md-6 col-sm-6 ">
                    <div id="gender" class="btn-group" data-toggle="buttons">
                        <label class="btn btn-secondary" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            @Html.TextBoxFor(m => m.gender, new { @type = "radio", @name = "gender" , @value = "male" , @class="join-btn"})
                            @Html.ValidationMessageFor(m => m.gender, "", new { @class = "text-danger" })&nbsp; Male &nbsp;
                        </label>
                        <label class="btn btn-primary" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            @Html.TextBoxFor(m => m.gender, new { @type = "radio", @name = "gender", @value = "female", @class = "join-btn" })
                            @Html.ValidationMessageFor(m => m.gender, "", new { @class = "text-danger" })&nbsp; Female &nbsp;
                           
                        </label>
                    </div>
                </div>
            </div>
            <div class="item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align">
                    Date Of Birth <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 ">
                    @Html.TextBoxFor(m => m.birthday, new { @id = "birthday", @class = "date-picker form-control", @placeholder = "dd-mm-yyyy",@required = "required", @type = "text" ,@onfocus = "this.type='date'", @onmouseover = "this.type='date'" ,@onclick = "this.type='date'", @onblur = "this.type='text'" ,@onmouseout = "timeFunctionLong(this)" })
                    @Html.ValidationMessageFor(m => m.birthday, "", new { @class = "text-danger" })
                    <script>
                        function timeFunctionLong(input) {
                            setTimeout(function () {
                                input.type = 'text';
                            }, 60000);
                        }</script>
                </div>
            </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <button class="btn btn-primary" type="button">Cancel</button>
                                <button class="btn btn-primary" type="reset">Reset</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>
