<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
    function removefromstock(supplierid, productid) {

        $.post("/Stock/RemoveStock", {
            productid: productid
        }, function (data) {
            $("#itemdivincart-" + supplierid + "-" + productid).remove();


        });


    }
</script>



